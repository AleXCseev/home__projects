{"ast":null,"code":"import { SortEnum } from \"../../components/Sort/Sort.props\";\nexport const sortReducer = (state, action) => {\n  switch (action.type) {\n    case SortEnum.Raiting:\n      return {\n        sort: SortEnum.Raiting,\n        products: state.products.sort((a, b) => a.initialRaiting > b.initialRaiting ? 1 : -1)\n      };\n\n    case SortEnum.Price:\n      return {\n        sort: SortEnum.Price,\n        products: state.products.sort((a, b) => a.price > b.price ? 1 : -1)\n      };\n\n    default:\n      throw new Error('Неверный тип сортировки');\n  }\n};","map":null,"metadata":{},"sourceType":"module"}